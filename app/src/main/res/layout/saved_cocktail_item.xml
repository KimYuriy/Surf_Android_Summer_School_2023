<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_margin="5dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/SCI_CocktailImg_IV"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="#535353"
        android:src="@drawable/img_default" />

    <TextView
        android:id="@+id/SCI_CocktailName_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/SCI_CocktailImg_IV"
        android:layout_alignTop="@id/SCI_CocktailImg_IV"
        android:layout_alignEnd="@id/SCI_CocktailImg_IV"
        android:layout_alignBottom="@id/SCI_CocktailImg_IV"
        android:gravity="center"
        android:text="Cocktail name"
        android:textAlignment="center"
        android:textColor="#fff" />
</RelativeLayout>